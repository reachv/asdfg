<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <EditText
        android:id="@+id/letter1"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_200"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/letter2"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/letter1"
        android:background="@color/teal_200"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="true"/>

    <EditText
        android:id="@+id/letter3"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/letter2"
        android:background="@color/teal_200"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="true"/>

    <EditText
        android:id="@+id/letter4"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/letter3"
        android:background="@color/teal_200"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="true"/>


    <EditText
        android:id="@+id/letter5"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/letter4"
        android:background="@color/teal_200"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/Solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letter5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="13dp"
        android:text="Solve"
        android:textAlignment="center" />

</RelativeLayout>